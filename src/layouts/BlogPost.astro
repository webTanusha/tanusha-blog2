---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import ConvertkitForm from "../components/ConvertkitForm.astro";
import UserSettingsLoad from "../components/UserSettingsLoad.astro";
import dateFormatter from "../utils/dateFormatter.js";

export interface Props {
  content: {
    title: string;
    description: string;
    pubDate?: Date;
    updatedDate?: Date;
    heroImage?: string;
    permalink: string;
    tags: string[];
  };
}

const {
  content: { title, description, pubDate, heroImage, permalink, tags },
} = Astro.props;

const date = dateFormatter.format(new Date(pubDate ? pubDate : new Date()));
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} permalink={permalink} />
    <style>
      .content {
        margin: 0 auto 8rem;
      }
      .content :global(main > * + :not(h2):not(h3)) {
        margin-top: 1rem;
      }
      .content :global(h2) {
        margin-top: 4rem;
      }
      .title,
      .publish-date {
        margin: 0;
        align-self: flex-start;
        justify-self: flex-start;
      }
      .publish-date {
        color: var(--theme-text-lighter);
      }
      .title {
        font-size: 2.25rem;
        font-weight: 700;
      }
      li {
        padding-right: 0.5rem;
        list-style-position: inside;
      }
      @media (max-width: 50em) {
        .title {
          font-size: 1.75rem;
          overflow-wrap: break-word;
        }
      }
    </style>
  </head>

  <body>
    <UserSettingsLoad />
    <ConvertkitForm />
    <Header title={title} />
    <main class="wrapper main">
      <article class="content">
        {heroImage && <img width={720} height={360} src={heroImage} alt="" />}
        <h1 class="title">{title}</h1>
        {date && <time class="publish-date">{date}</time>}
        <slot />
      </article>
    </main>
    <Footer />
  </body>
</html>
